[signal arg="cam-zoom-in"]
do global.vingette(true)
do global.disable_input()
do global.shake(true)
do global.glitch(false)
[wait time="3.0"]
do global.fade(false, 7, true)
do global.shake(false)
do global.vingette(false)
do global.change_level("death")
do global.fade(false, 5, true)
[signal arg="cam-zoom-normal"]
